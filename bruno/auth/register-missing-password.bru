meta {
  name: register-missing-password
  type: http
  seq: 8
}

post {
  url: {{base_url}}/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "testuser_{{timestamp}}",
    "email": "test_{{timestamp}}@example.com",
    "dateOfBirth": "1990-01-01"
  }
}

script:pre-request {
  bru.setVar("timestamp", Date.now());
}

tests {
  test("Status should be 400 for missing password", function () {
    expect(res.getStatus()).to.equal(400);
  });

  test("Response should indicate validation error", function () {
    const body = res.getBody();
    expect(body.code).to.equal(40001);
    expect(body.message).to.equal("Validation failed");
    expect(body.errors).to.have.property("password");
    expect(body.errors.password).to.be.an("array");
  });
}
